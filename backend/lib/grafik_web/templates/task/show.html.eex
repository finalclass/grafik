<h1>Zadanie: <%= @task.name %></h1>

<ul>

  <li>
    <strong>Status:</strong>
    <%= task_status_to_human(@task.status) %>
  </li>

  <li>
    <strong>Projekt:</strong>
    <%= @task.project.name %>
  </li>
  
  <li>
    <strong>Pracownik:</strong>
    <%= @task.worker.name %>
  </li>
  
  <li>
    <strong>Description:</strong>
    <%= @task.description %>
  </li>

</ul>

<span><%= edit_button(@conn, @task) %></span>
<span><%= list_button(@conn) %></span>
