<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Coś poszło nie tak, sprawdź błędy formularza</p>
    </div>
  <% end %>

  <label for="">
    Nazwa: <%= text_input f, :name %>
  </label>
  <%= error_tag f, :name %>
  

  <label for="">
    Wfirma id: <%= text_input f, :wfirma_id %>
  </label>
  <%= error_tag f, :wfirma_id %>

  <div>
    <%= submit "Zapisz" %>
  </div>
<% end %>
